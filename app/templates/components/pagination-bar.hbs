{{#if hideDetails}}
  <p data-test="pagination-details">
    <em>Showing {{firstItemShownIndex}}â€”{{lastItemShownIndex}} of {{totalItemsCount}} entries</em>
  </p>
{{/if}}

{{#if showPagination}}
  <ul class="pagination">

    <li data-test="pagination-prev" class="{{unless hasPrevious 'disabled'}}">
      <a {{action "goToPreviousPage"}} aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    {{#if showBeforeEllipsis}}
      {{pagination-bar-page page=1 currentPage=page action=(action 'goToPage')}}
      <li data-test="pagination-ellipsis" class="disabled"><a>&hellip;</a></li>
    {{/if}}
    {{#each visiblePages as |pageNumber|}}
      {{pagination-bar-page page=pageNumber currentPage=page action=(action 'goToPage')}}
    {{/each}}
    {{#if showAfterEllipsis}}
      <li data-test="pagination-ellipsis" class="disabled"><a>&hellip;</a></li>
      {{pagination-bar-page page=lastPage currentPage=page action=(action 'goToPage')}}
    {{/if}}

    <li data-test="pagination-next" class="{{unless hasNext 'disabled'}}">
      <a {{action "goToNextPage"}} aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>

{{/if}}
