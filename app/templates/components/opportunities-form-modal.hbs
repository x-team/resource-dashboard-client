{{#if showModal}}
  {{#modal-dialog targetAttachment="center"
                  translucentOverlay=true}}
    <form onsubmit={{action 'save'}}>
      <div class="form-group">
        <label>Name</label>
        {{input class="form-control" value=opportunity.name}}
      </div>

      <div class="form-group">
        <label>Skills</label>
       {{#power-select selected=opportunity.skills multiple=true options=allSkills onchange=(action (mut opportunity.skills)) as |name|}}
          {{name}}
        {{/power-select}}
      </div>

      <button type="submit" class="btn btn-active">Submit</button>
      <button type="button" class="btn btn-danger" onclick={{action 'closeModal'}}>Cancel</button>
    </form>
  {{/modal-dialog}}
{{/if}}


{{yield (action 'createModal') (action 'editModal')}}
