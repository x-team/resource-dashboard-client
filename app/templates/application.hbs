<div class="container-fluid layout-header navbar-container">
  <nav class="navbar">
    <div class="container-fluid">
      <div class="navbar-header">
        {{#link-to "dashboard" class="navbar-brand"}}Resource Dashboad{{/link-to}}
      </div>

      {{#if session.isAuthenticated}}
        <ul class="nav navbar-nav" data-test="main-header-navigation">
          <li>{{#link-to "dashboard" data-test="main-header-navigation-index"}}Dashboard{{/link-to}}</li>
          <li>{{#link-to "developers" (query-params page=1) data-test="main-header-navigation-developers"}}Developers{{/link-to}}</li>
          <li>{{#link-to "opportunities" (query-params page=1) data-test="main-header-navigation-opportunities"}}Opportunities{{/link-to}}</li>
          <li>{{#link-to "users" data-test="main-header-navigation-users"}}Users{{/link-to}}</li>
        </ul>
        <div onclick={{action 'logout'}} class="btn navbar-btn navbar-right login-btn">Logout</div>
        <div class="navbar-right navbar-text">
          {{session.data.authenticated.email}}
        </div>
      {{else}}
        <a class="btn navbar-btn navbar-right login-btn" data-test="main-header-login" onclick={{action 'login'}}>Login</a>
      {{/if}}

    </div>
  </nav>
</div>

<div class="layout-wrapper">
  <div class="layout-content">
    <div class="container-fluid main-content">
      {{outlet}}
    </div>
  </div>

  <div class="layout-footer">
    <div class="container-fluid  main-footer">
      <nav>
        {{#if session.isAuthenticated}}
          <ul data-test="main-footer-navigation">
            <li>{{#link-to "dashboard" data-test="main-footer-navigation-index"}}Dashboard{{/link-to}}</li>
            <li>{{#link-to "developers" (query-params page=1) data-test="main-footer-navigation-developers"}}Developers{{/link-to}}</li>
            <li>{{#link-to "opportunities" (query-params page=1) data-test="main-footer-navigation-opportunities"}}Opportunities{{/link-to}}</li>
            <li><a href="https://workable.com/" target="_blank" data-test="main-footer-navigation-workable">Workable</a></li>
          </ul>
        {{/if}}
      </nav>
    </div>
  </div>
</div>
